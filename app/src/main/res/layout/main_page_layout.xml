<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".MainPage">

    <LinearLayout
        android:id="@+id/mainPageLogo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        tools:ignore="MissingConstraints">

        <ImageView
            android:src="@drawable/main_logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_patient_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mainPageLogo"
        android:layout_marginTop="10dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:src="@drawable/add_patient_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/imageview_style"
            android:layout_marginStart="10dp"
            tools:ignore="ContentDescription" />

        <Button
            android:id="@+id/btn_addNewPatient"
            android:text="@string/add_new_patient"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:background="@drawable/button_style"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/search_patient_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/add_patient_linear"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:src="@drawable/search_patient_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/imageview_style"
            android:layout_marginStart="10dp"
            tools:ignore="ContentDescription" />

        <Button
            android:id="@+id/btn_searchPatient"
            android:text="@string/search_patient"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:background="@drawable/button_style"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/edit_patient_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/search_patient_linear"
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:src="@drawable/edit_patient_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/imageview_style"
            android:layout_marginStart="10dp"
            tools:ignore="ContentDescription" />

        <Button
            android:id="@+id/btn_editPatient"
            android:text="@string/edit_patient"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:background="@drawable/button_style"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/how_to_use_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edit_patient_linear"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:src="@drawable/how_to_use_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/imageview_style"
            android:layout_marginStart="10dp"
            tools:ignore="ContentDescription" />

        <Button
            android:id="@+id/btn_howToUse"
            android:text="@string/how_to_use_andromyography"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:background="@drawable/button_style"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/about_us_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/how_to_use_linear"
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:src="@drawable/about_us_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/imageview_style"
            android:layout_marginStart="10dp"
            tools:ignore="ContentDescription" />

        <Button
            android:id="@+id/btn_aboutUs"
            android:text="@string/about_us"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:background="@drawable/button_style"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            tools:ignore="MissingConstraints" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>